\newcommand{\wino}{\wtilde{W}^0}
\newcommand{\hinou}{\wtilde{H}^0_u}
\newcommand{\hinod}{\wtilde{H}^0_d}
\newcommand{\ewino}{\wtilde{\chi}}
\newcommand{\nino}[1][\ ]{\wtilde{\chi}_{#1}^0}
\newcommand{\chino}[1][\ ]{\wtilde{\chi}\indices*{^\pm_{#1}}}
\newcommand{\pchino}[1][\ ]{\wtilde{\chi}\indices*{^+_{#1}}}
\newcommand{\nchino}[1][\ ]{\wtilde{\chi}\indices*{^-_{#1}}}
\newcommand{\barbino}{\widebar{\wtilde{B}}^0}
\newcommand{\barwino}{\widebar{\wtilde{W}}^0}
\newcommand{\barhinou}{\widebar{\wtilde{H}}^0_u}
\newcommand{\barhinod}{\widebar{\wtilde{H}}^0_d}
\newcommand{\barewino}{\widebar{\wtilde{\chi}}}
\newcommand{\barnino}[1][]{\widebar{\wtilde{\chi}}_{#1}^0}
\newcommand{\barchino}[1][]{\widebar{\wtilde{\chi}}\indices*{_#1^\pm}}
\newcommand{\barpchino}[1][]{\widebar{\wtilde{\chi}}\indices*{_#1^+}}
\newcommand{\barnchino}[1][]{\widebar{\wtilde{\chi}}\indices*{_#1^-}}

