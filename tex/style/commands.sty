%%% This file custom defined commands %%%

% Misc
\newcommand{\pclosed}[1]{\left(#1\right)}
\newcommand{\bclosed}[1]{\left[#1\right]}
\newcommand{\cclosed}[1]{\left\{#1\right\}}
\newcommand{\vclosed}[1]{\left|#1\right|}
\newcommand{\msub}[2]{\ensuremath{{#1}_\text{#2}}}
\DeclareMathOperator{\cc}{c.c.}
\newcommand{\wtilde}[1]{\widetilde{#1}}
\newcommand{\wbar}[1]{\widebar{#1}}
\newcommand{\mbeq}{\overset{!}{=}}

% Calculus
\newcommand{\integral}[2][]{\ensuremath{\int#1 \!\mathrm{d}#2\,}}
\renewcommand{\d}[2][x]{\ensuremath{\frac{\mathrm{d}#2}{\mathrm{d}#1}}}
\newcommand{\pd}[2][x]{\ensuremath{\frac{\partial #2}{\partial #1}}}
\renewcommand{\exp}[1]{e^{#1}}
\newcommand{\exptext}[1]{\operatorname{exp}\pclosed{#1}}
\DeclareMathOperator{\sgn}{sgn}
\DeclareMathOperator{\Nabla}{\boldsymbol{\nabla}}
\newcommand{\evalat}[2]{\left.#1\right|_{#2}}
\newcommand{\dA}{\operatorname{\Box}}

% Linear algebra
\renewcommand{\vec}[1]{\boldsymbol{#1}}
\newcommand{\norm}[2][]{\ensuremath{\|#2\|_{#1}}}
\DeclareMathOperator{\eye}{\mathbb{I}}
\DeclareMathOperator{\diag}{diag}
\DeclareMathOperator{\tr}{Tr}
\newcommand{\by}{{\times}}
\renewcommand*{\^}[1]{\indices{^{#1}}}  % tens. index upper
\renewcommand*{\_}[1]{\indices{_{#1}}}  % tens. index lower
\newcommand{\underscore}{\char`_} % Retrieve underscore _:


% Complex Analysis
\renewcommand{\Re}[1]{\operatorname{Re}\cclosed{#1}}
\newcommand{\abs}[1]{\ensuremath{\vclosed{#1}}}

% Functional Analysis
\newcommand{\commutator}[2]{\bclosed{#1,#2}}
\newcommand{\anticommutator}[2]{\cclosed{#1,#2}}

% Minkowski notation
\newcommand{\metric}[2]{\tensor{g}{^{#1}^{#2}}}
\newcommand{\g}{\metric{\mu}{\nu}}

% QFT notation
\newcommand{\dimof}[1]{\bigl[#1\bigr]}
\renewcommand{\L}{\mathcal{L}}
\newcommand{\M}{\mathcal{M}}
\newcommand{\feynslash}[1]{\slashed{#1}}

% SUSY notation
\newcommand{\bino}{\wtilde{B}^0}
\newcommand{\wino}{\wtilde{W}^0}
\newcommand{\hinou}{\wtilde{H}^0_u}
\newcommand{\hinod}{\wtilde{H}^0_d}
\newcommand{\ewino}{\wtilde{\chi}}
\newcommand{\nino}[1][]{\tensor*{\wtilde{\chi}}{^0_{#1}}}
\newcommand{\chino}[1][]{\tensor*{\wtilde{\chi}}{^\pm_{#1}}}
\newcommand{\pchino}[1][]{\tensor*{\wtilde{\chi}}{^+_{#1}}}
\newcommand{\nchino}[1][]{\tensor*{\wtilde{\chi}}{^-_{#1}}}
\newcommand{\barbino}{\wbar{\wtilde{B}}^0}
\newcommand{\barwino}{\wbar{\wtilde{W}}^0}
\newcommand{\barhinou}{\wbar{\wtilde{H}}^0_u}
\newcommand{\barhinod}{\wbar{\wtilde{H}}^0_d}
\newcommand{\barewino}{\wbar{\wtilde{\chi}}}
\newcommand{\barnino}[1][]{\wbar{\wtilde{\chi}}^0\_{#1}}
\newcommand{\barchino}[1][]{\wbar{\wtilde{\chi}}\_{#1}^\pm}
\newcommand{\barpchino}[1][]{\wbar{\wtilde{\chi}}^+\_{#1}}
\newcommand{\barnchino}[1][]{\wbar{\wtilde{\chi}}^-\_{#1}}

% Statistics
\newcommand{\expval}{\operatorname{\mathbb{E}}}
