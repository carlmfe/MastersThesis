% Phantom paragraph:
\makeatletter
\newcommand{\phpar}[1][\@nil]{%
    \def\tmp{#1}%
    \ifx\tmp\@nnil
        \par\colorbox{n@darkblue}{\textcolor{white}{\textsc{phantom paragraph}}}
    \else
        \par\colorbox{n@darkblue}{\textcolor{white}{\textsc{phantom paragraph:}}}~\textcolor{n@darkblue}{\textsc{#1}}
    \fi
}
\makeatother

